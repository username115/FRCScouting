<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    tools:context="org.frc836.yearly.AutoMatchFragment">

    <TextView
        android:id="@+id/AutoText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="@string/auto_input_text"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/AutoText">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <ToggleButton
                android:id="@+id/taxiToggle"
                android:layout_width="94dp"
                android:layout_height="74dp"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="25dp"
                android:background="@drawable/icon_toggleautobutton"
                android:textOff=""
                android:textOn=""
                tools:layout_centerHorizontal="true" />


            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/decrement_auto_high_success_image"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:src="@drawable/icon_awesome_check_double" />

                        <Button
                            android:id="@+id/decrement_auto_high_success"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="-" />

                        <Spinner
                            android:id="@+id/auto_high_success_spinner"
                            style="@style/SpinnerAsEditText"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:entries="@array/numbers"
                            android:gravity="center"
                            android:textAlignment="center" />

                        <Button
                            android:id="@+id/increment_auto_high_success"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="+" />

                        <ImageView
                            android:id="@+id/increment_auto_high_success_image"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:src="@drawable/icon_awesome_check_double" />
                    </LinearLayout>
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/decrement_auto_high_failure_image"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:src="@drawable/icon_metro_cross" />

                        <Button
                            android:id="@+id/decrement_auto_high_failure"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="-" />

                        <Spinner
                            android:id="@+id/auto_high_failure_spinner"
                            style="@style/SpinnerAsEditText"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:entries="@array/numbers"
                            android:gravity="center"
                            android:textAlignment="center" />

                        <Button
                            android:id="@+id/increment_auto_high_failure"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="+" />

                        <ImageView
                            android:id="@+id/increment_auto_high_failure_image"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:src="@drawable/icon_metro_cross" />

                    </LinearLayout>

                </TableRow>

            </TableLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/hub_image_auto"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/fieldimage_hub_side_raster" />
            </RelativeLayout>

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/decrement_auto_low_success_image"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:src="@drawable/icon_awesome_check_double" />

                        <Button
                            android:id="@+id/decrement_auto_low_success"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="-" />

                        <Spinner
                            android:id="@+id/auto_low_success_spinner"
                            style="@style/SpinnerAsEditText"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:entries="@array/numbers"
                            android:gravity="center"
                            android:textAlignment="center" />

                        <Button
                            android:id="@+id/increment_auto_low_success"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="+" />

                        <ImageView
                            android:id="@+id/increment_auto_low_success_image"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:src="@drawable/icon_awesome_check_double" />

                    </LinearLayout>
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/decrement_auto_low_failure_image"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:src="@drawable/icon_metro_cross" />

                        <Button
                            android:id="@+id/decrement_auto_low_failure"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="-" />

                        <Spinner
                            android:id="@+id/auto_low_failure_spinner"
                            style="@style/SpinnerAsEditText"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:entries="@array/numbers"
                            android:gravity="center"
                            android:textAlignment="center" />

                        <Button
                            android:id="@+id/increment_auto_low_failure"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="+" />

                        <ImageView
                            android:id="@+id/increment_auto_low_failure_image"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:src="@drawable/icon_metro_cross" />

                    </LinearLayout>

                </TableRow>

            </TableLayout>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>
